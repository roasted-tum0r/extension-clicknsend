{
  "manifest_version": 3,
  "name": "Open SesamE-mail",
  "version": "1.1.1",
  "description": "Right-click an email and send emails using templates. One step closer to being so lazy about sending mails.",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "dist/popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/popup/index.js",
        "dist/popup/index.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}